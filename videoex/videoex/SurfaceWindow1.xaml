<s:SurfaceWindow x:Class="videoex.SurfaceWindow1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="http://schemas.microsoft.com/surface/2008"
    Title="videoex"
    >
  <Grid Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="9*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <MediaElement Name="MyVideo" Source="C:\Users\Public\Videos\Sample Videos\Wildlife.wmv" LoadedBehavior="Manual" 
                      Loaded="instructionVideo_Loaded" MediaEnded="instructionVideo_MediaEnded" Grid.RowSpan="1"/>
      
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Content="Play" Name="button1" Width="75" Click="button1_click" />
            <Button Content="Pause" Name="button2" Width="75" Click="button2_click" />
            <Button Content="Stop" Name="button3" Width="75" Click="button3_click" />
            
            <Slider Height="23" Name="slider1" Width="265" Margin="5"
                    Maximum="1"
                    Value="{Binding ElementName=MyVideo, Path=Volume, Mode=TwoWay}"/>
            
        </StackPanel>
      


    </Grid>
</s:SurfaceWindow>
