    <s:SurfaceWindow.Resources>
        <fluidControls:SlideTransition x:Key="SlideTransitioner" />
        <Storyboard x:Key="sb">
            <DoubleAnimation Storyboard.TargetName="InfoScale" Storyboard.TargetProperty="ScaleX" From="0" To="1">
                <DoubleAnimation.EasingFunction>
                    <BounceEase/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="InfoScale" Storyboard.TargetProperty="ScaleY" From="0" To="1">
                <DoubleAnimation.EasingFunction>
                    <BounceEase/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
		<Storyboard x:Key="BoxSlideIn" >
            <ThicknessAnimation Duration="0:0:.75" Storyboard.TargetProperty="Margin" From="0,140,0,180.666" To="0,140,-500,180.666" DecelerationRatio=".9" />
        </Storyboard>

        <Storyboard x:Key="BoxSlideOut">
            <ThicknessAnimation Duration="0:0:.5" Storyboard.TargetProperty="Margin" From="0,140,-500,180.666" To="0,140,0,180.666" AccelerationRatio=".9"/>
        </Storyboard>
    </s:SurfaceWindow.Resources>
